<Window x:Class="RandomPicker.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomPicker"
        mc:Ignorable="d"
        Title="HomeWindow" Height="633" Width="800" ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="#FF0063B1">
        <Rectangle Fill="#FF4E4E4E" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="800"/>
        <Rectangle Fill="#FFEEEEEE" HorizontalAlignment="Left" Height="54" Margin="0,579,0,0" Stroke="#1EEEEEEE" VerticalAlignment="Top" Width="800"/>
        <TextBox x:Name="Manual_Input" HorizontalAlignment="Left" Height="37" Margin="98,588,0,0" TextWrapping="Wrap" Text="Quick Add" VerticalAlignment="Top" Width="306" BorderBrush="#FF575757" Background="Transparent" Foreground="#FF9D9D9D" BorderThickness="2" FontSize="20"/>
        <Button x:Name="addButton" Content="+" HorizontalAlignment="Left" Margin="402,588,0,8" Width="50" Background="#FF575757" Foreground="#FFEEEEEE" BorderBrush="#FF575757" FontSize="40" FontWeight="Bold" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="1,-13,1,1" Click="addButton_Click"/>
        <Grid x:Name="menuGrid" HorizontalAlignment="Left" Height="546" VerticalAlignment="Top" Width="239" Background="#FFEEEEEE" Margin="0,32,0,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="208*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Create_Button" Content="  Create" HorizontalAlignment="Left" Height="47" Margin="0,32,0,0" VerticalAlignment="Top" Width="239" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="17.333" HorizontalContentAlignment="Left" Grid.ColumnSpan="2"/>
            <Button x:Name="Load_Button" Content="  Load" HorizontalAlignment="Left" Height="47" Margin="0,79,0,0" VerticalAlignment="Top" Width="239" HorizontalContentAlignment="Left" FontSize="17.333" Background="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Click="button2_Click"/>
            <Button x:Name="View_Button" Content="  View" HorizontalAlignment="Left" Height="47" Margin="0,126,0,0" VerticalAlignment="Top" Width="239" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalContentAlignment="Left" FontSize="17.333" Grid.ColumnSpan="2"/>
            <Button x:Name="Save_Button" Content="  Save" HorizontalAlignment="Left" Height="47" Margin="0,173,0,0" VerticalAlignment="Top" Width="239" HorizontalContentAlignment="Left" FontSize="17.333" Background="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2"/>
            <GridSplitter x:Name="gridSplitter" Height="238" Margin="0,113,88.576,0" VerticalAlignment="Top" Width="3" RenderTransformOrigin="0.5,0.5" Background="#7F575757">
                <GridSplitter.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="89.733"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </GridSplitter.RenderTransform>
            </GridSplitter>
            <Label x:Name="label" Content="Recents" HorizontalAlignment="Left" Margin="6,236,0,0" VerticalAlignment="Top" FontSize="16"/>
            <StackPanel HorizontalAlignment="Left" Height="264" Margin="6,274,0,0" VerticalAlignment="Top" Width="225" Background="#33818080" Grid.ColumnSpan="2"/>
        </Grid>
        <Image x:Name="image3" HorizontalAlignment="Left" Height="264" Margin="270,170,0,0" VerticalAlignment="Top" Width="298" Source="Assets/Circles.gif" Stretch="None" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBox x:Name="Picked_Record" HorizontalAlignment="Left" Height="34" Margin="325,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" Background="{x:Null}" BorderBrush="{x:Null}" TextAlignment="Center" Foreground="#FFEEEEEE"/>
        <Button x:Name="burgerIcon" Content="" HorizontalAlignment="Left" Height="37" Margin="10,588,0,0" VerticalAlignment="Top" Width="44" BorderBrush="{x:Null}" Click="burgerIcon_Click">
            <Button.Background>
                <ImageBrush ImageSource="Assets/HamburgerIcon.gif"/>
            </Button.Background>
        </Button>
        <Button x:Name="closeButton" Content="" HorizontalAlignment="Left" Margin="776,9,0,0" VerticalAlignment="Top" Width="17" BorderBrush="{x:Null}" Height="17">
            <Button.Background>
                <ImageBrush ImageSource="Assets/icon-close-128.gif"/>
            </Button.Background>
        </Button>
        <Button x:Name="button" Content="" HorizontalAlignment="Left" Margin="755,9,0,0" VerticalAlignment="Top" Width="17" Height="17" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Assets/maximize.gif"/>
            </Button.Background>
        </Button>
        <Button x:Name="button5" Content="" HorizontalAlignment="Left" Margin="733,9,0,0" VerticalAlignment="Top" Width="17" Height="17" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Assets/minimize-windows-icon.gif" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label x:Name="label1" Content="Random Picker" HorizontalAlignment="Right" Margin="0,4,679,0" VerticalAlignment="Top" RenderTransformOrigin="0.592,0.538" Foreground="#FFEEEEEE" Height="28"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="27" Margin="4,3,0,0" VerticalAlignment="Top" Width="27" Source="Assets/image.gif"/>
        <Button x:Name="Pick_Button" Content="Random Pick" HorizontalAlignment="Left" Height="35" Margin="646,588,0,0" VerticalAlignment="Top" Width="126" Background="#FF575757" Foreground="#FFEEEEEE" Click="Pick_Button_Click"/>

    </Grid>
</Window>
